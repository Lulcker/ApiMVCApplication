@model ApiMVCApplication.Models.User

<h2>Добавление пользователя</h2>
<form asp-action="Create", asp-controller="Home">
    <p>
        <label asp-for="Login">Login</label><br />
        <input type="text" asp-for="Login" placeholder="введите логин"/>
        <span asp-validation-for="Login"></span>
    </p>
    <p>
        <label asp-for="Password">Password</label><br />
        <input type="password" asp-for="Password" placeholder="введите пароль"/>
        <span asp-validation-for="Password"></span>
    </p>
    <p>
        <label asp-for="UserGroupId">User group</label>
        <select asp-for="UserGroupId">
            @if (ViewBag.CountAdmin)
            {
                <option value="1">Admin</option>
                <option value="2">User</option>
            }
            else
            {
                <option value="2">User</option>
            }
        </select>
    </p>
    <p>
        <input type="submit" value="Send" />
    </p>
</form>
<p><a asp-action="Index">Назад</a></p>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>