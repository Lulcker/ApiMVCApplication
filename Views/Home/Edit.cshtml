@model ApiMVCApplication.Models.User

<h2>Изменение пользователя</h2>
<form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Login">Login</label><br />
        <input type="text" asp-for="Login" />
    </p>
    <p>
        <label asp-for="Password">Password</label><br />
        <input type="password" asp-for="Password" />
    </p>
    <p>
        <input type="hidden" asp-for="UserGroupId" />
        <input type="hidden" asp-for="UserStateId" />

        <input type="submit" value="Send" />
    </p>
</form>
<p>
    <a asp-action="Index">Назад</a>
</p>

